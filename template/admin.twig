{% include 'header.twig' %}

<body>
  <div class="container row">
    <div class="row">
      <nav class="blue-grey lighten-3">
        <div class="nav-wrapper">
          <a href="/u/kravchenko/question/" class="brand-logo right">FAQ</a>
          <ul class="left">
            <li class="active"><a href="/u/kravchenko/question/admin/">Администраторы</a></li>
            <li><a href="/u/kravchenko/question/theme/">Темы</a></li>
            <li><a href="/u/kravchenko/question/question/">Вопросы</a></li>
            <li><a href="?/logout/">Выйти</a></li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="row"><h4>Добавить администратора</h4></div>

    <form method="post" action="?/add/" class="row">
      <div class="input-field col s3">
          <input name="login" id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix">Логин</label>
      </div>
      <div class="input-field col s3 offset-s1">
        <input name="password" id="icon_prefix" type="text" class="validate">
        <label for="icon_prefix">Пароль</label>
      </div>
      <div class="input-field col s2 offset-s1">
        <button class="btn waves-effect waves-light" type="submit" name="addAdmin">Добавить</button>
      </div>
    </form>

    <div class="row"><h4>Администраторы</h4></div>

    <table class="bordered">
      <thead>
      <tr>
        <th>Логин</th>
        <th>Пароль</th>
        <th>Удалить</th>
      </tr>
      </thead>

      <tbody>
        {% for index, admin in data %}
          <tr>
            <td>{{ admin.login|e }}</td>
            <td>
              <!-- Modal Trigger -->
              <a class="waves-effect" href="#modal{{ index }}">Изменить пароль</a>
              <!-- Modal Structure -->
              <form method="post" action="?/update/id/{{ admin.id }}/" id="modal{{ index }}" class="modal">
                <div class="modal-content">
                  <h4>Изменить пароль</h4>
                  <input id="icon_prefix" type="text" class="validate" name="password">
                </div>
                <div class="modal-footer">
                  <button class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" name="updateAdmin">Изменить</button>
                </div>
              </form>
            </td>
            <td><a class="btn" href="?/delete/id/{{ admin.id }}/"><i class="material-icons">delete</i></a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% include 'footer.twig' %}